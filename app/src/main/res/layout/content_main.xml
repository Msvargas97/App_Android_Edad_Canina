<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.michaelvargas.myapplication.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:id="@+id/dog_image"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="2dp"
        android:adjustViewBounds="true"
        android:src="@drawable/dog"

       />
    <TextView
        android:id="@+id/label1"
        android:layout_below="@+id/dog_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/init4"
        android:textSize="15sp"
        />
    <EditText
        android:id="@+id/editText1"
        android:layout_below="@+id/label1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/init3"
        android:textSize="20sp" />
    <Button
        android:id="@+id/bnt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/init2"
        android:layout_below="@id/editText1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtResul"
        android:layout_below="@+id/bnt1"
        android:text="@string/init1"
        android:textSize="20sp"/>

</RelativeLayout>
